<!-- Page Header -->
<div class="bg-header"></div>
<div class="@App?.GetContentClass() page-header">
    <div class="breadcrumb">
        <a class="bi bi-house-fill icon-zoom" href="admin"></a>
        <i class="bi bi-chevron-right"></i>
        <span>@Title</span>
    </div>
    @if (!string.IsNullOrEmpty(AddButtonText))
    {
        <div class="ms-auto text-end">
            <a type="button" class="btn btn-primary rounded-pill btn-sm" href="admin/@AddButtonLink"><i class="bi bi-plus-circle me-3"></i>@AddButtonText</a>
        </div>
    }
</div>


@code {
    [CascadingParameter] AppState? App { get; set; }
    
    [Parameter] public string? Title { get; set; } = string.Empty;

    [Parameter] public string? AddButtonText { get; set; } = string.Empty;

    [Parameter] public string? AddButtonLink { get; set; } = string.Empty;
}